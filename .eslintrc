{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-typescript/base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this": ["error", {
            "exceptMethods": ["store", "show"]
        }],
        "no-underscore-dangle": ["error", {
            "allow": ["_id"]
        }],
        "import/prefer-default-export": "off",
        "indent": "off",
        "@typescript-eslint/indent": ["error", 4]
    }
}
